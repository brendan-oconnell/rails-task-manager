<h2><%= @task.title %></h2>
<p><%= @task.details %></p>


<p>  Done? <% if @task.completed %>
      <i class="fa-solid fa-check"></i>
    <% else %>
      <i class="fa-regular fa-square"></i>
    <% end %></p>


<%= link_to("Edit Task", edit_task_path) %>
<%= link_to("Back to Task List", tasks_path) %>
